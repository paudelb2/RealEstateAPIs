<!DOCTYPE html>
<html>

     <head>
          <%- include('sidebar.ejs') %>
               <!-- Bootstrap 5.0.2 -->
               <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
                    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
                    crossorigin="anonymous">
               <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
                    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
                    crossorigin="anonymous"></script>
               <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
                    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
                    crossorigin="anonymous"></script>

               <link rel='stylesheet' href='/stylesheets/style.css' />
               <link rel="stylesheet"
                    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
               <title>
                    <%= title %>
               </title>
     </head>

     <body style="background-color:#fefbe9;">
          <nav class="navbar navbar-expand-lg bg-blue">
               <div class="container-fluid">
                    <a class="navbar-brand pe-5 text-white" href="/">Real Estate API</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                         data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="true"
                         aria-label="Toggle navigation">
                         <span>
                              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="bi"
                                   fill="currentColor" viewBox="0 0 16 16">
                                   <path fill-rule="evenodd"
                                        d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z">
                                   </path>
                              </svg>
                         </span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                         <div class="navbar-nav ms-auto">
                              <% if(title==='home' ){%>
                                   <a class="nav-link pe-5 active" aria-current="page" href="/">Home</a>
                                   <a class="nav-link pe-5" href="/about">About</a>
                                   <a class="nav-link pe-5" href="/documents">Documents</a>
                                   <a class="nav-link pe-5" href="/contact">Contact</a>
                                   <% } if(title==='about' ){%>
                                        <a class="nav-link pe-5" href="/">Home</a>
                                        <a class="nav-link pe-5 active" aria-current="page" href="/about">About</a>
                                        <a class="nav-link pe-5" href="/documents">Documents</a>
                                        <a class="nav-link pe-5" href="/contact">Contact</a>
                                        <% } if(title==='documents' ){%>
                                             <a class="nav-link pe-5 " href="/">Home</a>
                                             <a class="nav-link pe-5 " href="/about">About</a>
                                             <a class="nav-link pe-5 active" aria-current="page"
                                                  href="/documents">Documents</a>
                                             <a class="nav-link pe-5" href="/contact">Contact</a>
                                             <% } if(title==='contact' ){%>
                                                  <a class="nav-link pe-5 " href="/">Home</a>
                                                  <a class="nav-link pe-5 " href="/about">About</a>
                                                  <a class="nav-link pe-5 " href="/documents">Documents</a>
                                                  <a class="nav-link pe-5 active" aria-current="page"
                                                       href="/contact">Contact</a>
                                                  <% }%>
                         </div>
                    </div>
               </div>
               <div class="me-5">
                    <button class="btn1" data-bs-toggle="modal" data-bs-target="#exampleModal"><i
                              class="fa fa-user"></i></button>
               </div>
               <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                         <div class="modal-content">
                              <div class="modal-header"><button type="button" class="btn-close " data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                              </div>
                              <div class="mx-auto p-3">
                                   <button class="btn2 " id="btnLogin" onclick="login()">Login</button>
                                   <button class="btn2 " id="btnSignup" onclick="signup()">SignUp</button>
                              </div>
                              <div class="modal-body">
                                   <form id="login" class="d-block">
                                        <div class="mb-3">
                                             <label for="username" class="col-form-label">Username:</label>
                                             <input type="text" class="form-control" id="username">
                                        </div>
                                        <div class="mb-3">
                                             <label for="Password" class="col-form-label">Password:</label>
                                             <input type="password" class="form-control" id="Password">
                                        </div>
                                        <div class=""><button type="submit" class="btn3">SIGN
                                                  IN</button>
                                        </div>
                                   </form>

                                   <form id="signup" class="d-none">
                                        <div class="mb-3">
                                             <label for="firstname" class="col-form-label">First Name:</label>
                                             <input type="text" class="form-control" id="firstname">
                                        </div>
                                        <div class="mb-3">
                                             <label for="lastname" class="col-form-label">Last Name:</label>
                                             <input type="text" class="form-control" id="lastname">
                                        </div>
                                        <div class="mb-3">
                                             <label for="email" class="col-form-label">Email:</label>
                                             <input type="email" class="form-control" id="email">
                                        </div>
                                        <div class="mb-3">
                                             <label for="password" class="col-form-label">Password:</label>
                                             <input type="password" class="form-control" id="password">
                                        </div>
                                        <div class="mb-3">
                                             <label for="repassword" class="col-form-label">Re-Enter Password:</label>
                                             <input type="password" class="form-control" id="repassword">
                                        </div>
                                        <button type="reset" class="btn3"> Reset</button>
                                        <button type="submit" class="btn3">Submit</button>
                                   </form>

                              </div>
                              <div class="modal-footer">
                                   <button type="button" class="btn border-1 border-info bg-light"
                                        data-bs-dismiss="modal">Close</button>
                              </div>
                         </div>
                    </div>
               </div>
          </nav>
          <script>
               var x = document.getElementById("login");
               var y = document.getElementById("signup");
               var loginButton = document.getElementById("btnLogin")
               var signupButton = document.getElementById("btnSignup")

               function login() {
                    if (loginButton.classList.contains("btn2"))
                    {
                         loginButton.classList.remove("btn2")
                         loginButton.classList.add("change-background")
                    }
                    signupButton.classList.remove("change-background")
                    signupButton.classList.add("btn2")

                    if (y.classList.contains("d-block"))
                    {
                         y.classList.remove('d-block');
                         y.classList.add('d-none');
                    }
                    if (x.classList.contains('d-none'))
                    {
                         x.classList.remove('d-none');
                    }
                    x.classList.add('d-block');
               }
               function signup() {


                    if (signupButton.classList.contains("btn2"))
                    {
                         signupButton.classList.remove("btn2")
                         signupButton.classList.add("change-background")
                    }
                    loginButton.classList.remove("change-background")
                    loginButton.classList.add("btn2")

                    if (x.classList.contains("d-block"))
                    {
                         x.classList.remove('d-block');
                         x.classList.add('d-none');
                    }

                    if (y.classList.contains('d-none'))
                    {
                         y.classList.remove('d-none');
                    }
                    y.classList.add('d-block');
               }
          </script>
     </body>

</html>